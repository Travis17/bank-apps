<!DOCTYPE html>
<html>
    <head>
        <title>Signup</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta charset="UTF-8">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
        <link rel="stylesheet" href="/custom.css">
    </head>
    <body>
        <header class="container-fluid">
            <div class="container">
                <div class="col-md-4">
                <a href="/" id="logo">Bankable</a>
                </div>
                <div class="col-md-8">
                    
                </div>
            </div>
        </header>
        <section class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <h2>Sign Up</h2>
                    <p>If you already have an account, <a href="/login">Login</a></p>
                    <% if (message.length) { %>
                        <div class="alert alert-danger">
                            <%= message %>
                        </div>
                    <% } %>
                    <form action="" method="POST" role="form">
                        <div class="form-group">
                            <input type="text" name="name" placeholder="Name" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="email" name="username" placeholder="Email" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="password" pattern=".{7,100}" name="password" placeholder="Password" class="form-control" title="Please enter minimum 7 and maximum of 100 characters" required>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Signup" class="btn btn-default form-control">
                        </div>
                    </form>
                </div>
            </div>
        </section>
        
    </body>
</html>